<h1>Edit your property</h1>

<% if @property && !@property.errors.empty? %>
  <% @property.errors.full_messages.each do |e| %>
  	<p><%= e %></p>
  	<% end %>
  <% end %>

 <form action="/properties/<%= @property.id %>" method="post">
 	<input type="hidden" name="_method" value="put">
 	<textarea name="property[body]" rows="5" cols="30"><%= @property.body %></textarea>
 	<input type="submit" value="Update!">
 </form>